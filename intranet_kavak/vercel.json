{
    "builds": [
        {
            "src": "index.php",
            "use": "vercel-php@0.8.3"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}